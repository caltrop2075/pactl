BEGIN {
   FS="|"
   w=15
   d=""
   for(i=0;i<80;i++)
      d=d"-"
}
#===============================================================================
{
   gsub(/\t/,"")
   gsub(/ #/,"|")
   gsub(/: /,"|")
   gsub(/:/,"|")
   gsub(/ = /,"|")
   sub(/\(.*\)/,"")

   switch($1)
   {
      case "Card" :
         printf("%s\n",d)
      case "Name" :
      case "Profiles" :
      case "Ports" :
         printf("%"w"s: %s\n",$1,$2)
         break
      case "input" :
         printf("%"w+2"s%s:%s:%s\n","",$1,$2,$3)
         break
      case "output" :
         switch($2)
         {
            case /+/ :
               printf("%"w+2"s%s:%s:%s\n","",$1,$2,$3)
         }
         break
      case /^analog.*/ :
      case /^hdmi.*/ :
         printf("%"w+2"s%s\n","",$1)
         break
   }
}
#===============================================================================
END {
   printf("%s\n",d)
}
