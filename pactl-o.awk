# pactl list
#===============================================================================
BEGIN {
   FS="[:=]"
   flg=0
}
#===============================================================================
{
   gsub("\t","")
   gsub(": ",":")
   gsub(" = ","=")
   if(NR>1)
   {
      switch($1)
      {
         case /Name/ :
            if(index($2,"pci"))
            {
               # prn()
               flg=1
            }
            break
         case /Active Port/ :
            if(flg)
            {
               # prn()
               print $2
               flg=0
            }
      }
   }
}
#===============================================================================
END {
}
